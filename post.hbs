{{!< default}}
<progress value="0"></progress>
{{#post}}

<section class="wrap">
  <div class="inner cover post post-head">
    <article class="{{post_class}} blog-post">
      <header>
        <h1 class="headline">{{{title}}}</h1>
      </header>
      <section class="">
        <h5 class="post-meta text-center">
          Published <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMMM YYYY'}}</time>{{#if tags}}, in {{tags separator=", "}}.{{/if}}
          {{> "share"}}
        </h5>
      </section>
    </article>
  </div>
</section>

{{#if image}}
  <header class="img-wrap">
    <img src="{{image}}" alt="post-banner" />
  </header>
{{/if}}

<section class="wrap">
    <article class="{{post_class}} blog-post">
      <header class="inner cover post post-head">
      <div class="inner cover post post-body">
        {{content}}
      </div>

      <hr style="margin-bottom:5px" />
      <div class="inner cover post post-foot footer-info text-muted">

        <div class="post-foot-left">
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>
        </div>

        <div class="post-foot-right">
          Share this post:
          <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
             onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <i class="fa fa-twitter"></i>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
             onclick="window.open(this.href, 'facebook-share', 'width=580,height=296');return false;">
            <i class="fa fa-facebook"></i>
          </a>
          <a href="https://plus.google.com/share?url={{url absolute="true"}}"
             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <i class="fa fa-google-plus-square"></i>
          </a>
        </div>
      </div>
    </article>

    {{> "disqus"}}

  {{/post}}
</section>
